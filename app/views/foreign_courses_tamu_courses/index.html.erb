<p id="notice"><%= notice %></p>

<h1>Foreign Courses Tamu Courses</h1>

<table>
  <thead>
    <tr>
      <th>Foreign course</th>
      <th>Tamu course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foreign_courses_tamu_courses.each do |foreign_courses_tamu_course| %>
      <tr>
        <td><%= ForeignCourse.where(id: foreign_courses_tamu_course.foreign_course_id).last.foreign_course_name %></td>
        <td><%= TamuCourse.where(id: foreign_courses_tamu_course.tamu_course_id).last.course_name %></td>
        <td><%= link_to 'Show', foreign_courses_tamu_course %></td>
        <td><%= link_to 'Edit', edit_foreign_courses_tamu_course_path(foreign_courses_tamu_course) %></td>
        <td><%= link_to 'Destroy', foreign_courses_tamu_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

