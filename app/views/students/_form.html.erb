<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tamu_department_id %>
    <%= form.collection_select :tamu_department_id, TamuDepartment.all, :id, :tamu_department_name %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.where(id: current_user.id), :id, :name %>
  </div>

  <div class="field">
    <%= form.label :tamu_major %>
    <%= form.select :tamu_major, $majors %>
  </div>

  <div class="field">
    <%= form.label :tamu_college %>
    <%= form.select :tamu_college, $colleges%>
  </div>

  <div class="field">
    <%= form.label :classification %>
    <%= form.select :classification, ["U0", "U1", "U2", "U3", "U4", "U5"] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
