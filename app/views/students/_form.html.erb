    <%= form.collection_select :user_id, User.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :tamu_major %>
    <%= form.text_field :tamu_major %>
  </div>

  <div class="field">
    <%= form.label :tamu_college %>
    <%= form.text_field :tamu_college %>
  </div>

  <div class="field">
    <%= form.label :classification %>
    <%= form.text_field :classification %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
