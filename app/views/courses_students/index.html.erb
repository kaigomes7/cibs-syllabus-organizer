<p id="notice"><%= notice %></p>

<h1>Courses Students</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Foreign course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_students.each do |courses_student| %>
      <tr>
        <td><%= Student.where(id: courses_student.student_id).last.student_name %></td>
        <td><%= ForeignCourse.where(id: courses_student.foreign_course_id).last.foreign_course_name %></td>
        <td><%= link_to 'Show', courses_student %></td>
        <td><%= link_to 'Edit', edit_courses_student_path(courses_student) %></td>
        <td><%= link_to 'Destroy', courses_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

