<style>
    table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 90%;
    }
    .center {
    margin-left: auto;
    margin-right: auto;
    }

    td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
    }

    tr:nth-child(even) {
    background-color: #dddddd;
    }
</style>




<table class="center">
  <thead>
    <tr>
      <th>Syllabus PDF</th>
      <th>Semester Approved</th>
      <th>Foreign Course Department</th>
      <th>Foreign Course Number</th>
      <th>Foreign Course Name</th>
      <th>Foreign School Name</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    
    <% @foreign_courses_students.each do |foreign_course_student| %>
        <% if foreign_course_student.student_id == Student.find_by_id(current_user.id).user_id  %>
        <!-- foreign_courses_students.where(id: foreign_courses_students.foreign_course_id) != nil && Student.find_by_id(current_user.id) ==     -->
          <tr>
              <td><%= link_to ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.syllabus.filename, rails_blob_path(ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.syllabus, disposition: :attachment) %></td>
              <td><%= ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.semester_approved %></td> <!-- look at this later -->
              <td><%= ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.foreign_course_dept %></td>
              <td><%= ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.foreign_course_num %></td>
              <td><%= ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.foreign_course_name %></td>
              <td><%= University.where(id: ForeignCourse.where(id: foreign_course_student.foreign_course_id)).last.university_name %></td>
              <% if ForeignCourse.where(id: foreign_course_student.foreign_course_id).last.course_approval_status  %> <!-- would be the final pending approval // admin course approval from the foreign_coruses_students -->
                  <td> Approved </td>
              <% else %>
                  <td> Pending... </td>
              <% end %>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<%= button_to "New Request +", new_request_path, :id => "open-contacts-dialog-btn", :class => "btn btn-secondary", :method => :get, :style => "position: relative; right: -5%; top: -5%" %>
