<p id="notice"><%= notice %></p>

<h1>Foreign Courses Students</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Foreign course</th>
      <th>Admin course approval</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foreign_courses_students.each do |foreign_courses_student| %>
      <tr>
        <td><%= foreign_courses_student.student_id %></td>
        <td><%= foreign_courses_student.foreign_course_id %></td>
        <td><%= foreign_courses_student.admin_course_approval %></td>
        <td><%= foreign_courses_student.start_date %></td>
        <td><%= foreign_courses_student.end_date %></td>
        <td><%= link_to 'Show', foreign_courses_student %></td>
        <td><%= link_to 'Edit', edit_foreign_courses_student_path(foreign_courses_student) %></td>
        <td><%= link_to 'Destroy', foreign_courses_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

