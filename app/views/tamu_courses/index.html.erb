<p id="notice"><%= notice %></p>

<h1>Tamu Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course num</th>
      <th>Tamu department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tamu_courses.each do |tamu_course| %>
      <tr>
        <td><%= tamu_course.course_num %></td>
		<td><%= TamuDepartment.where(id: tamu_course.tamu_department_id).last.tamu_department_name %></td>
        <td><%= link_to 'Show', tamu_course %></td>
        <td><%= link_to 'Edit', edit_tamu_course_path(tamu_course) %></td>
        <td><%= link_to 'Destroy', tamu_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

